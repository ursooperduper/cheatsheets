tmux has-session -t cheat

if [ $? != 0 ]
then
  tmux new-session -s cheat -n editor -d
  tmux send-keys -t cheat:1.1 'cd ~/Dropbox/code/cheatsheets' C-m
  tmux send-keys -t cheat:1.1 'jekyll serve --watch --incremental --baseurl '' ' C-m

  tmux split-window -h -t cheat:1.1
  tmux send-keys -t cheat:1.2 'cd ~/Dropbox/code/cheatsheets' C-m
  tmux send-keys -t cheat:1.2 'atom .' C-m
  tmux send-keys -t cheat:1.2 'cl' C-m
  tmux send-keys -t cheat:1.2 'ls' C-m

  tmux split-window -v -t cheat:1.1 -d
  tmux send-keys -t cheat:1.3 'cd ~/Dropbox/code/cheatsheets' C-m
  tmux send-keys -t cheat:1.3 'gulp' C-m
fi

tmux attach -t cheat
